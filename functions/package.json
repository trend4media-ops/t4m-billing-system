{
  "name": "trend4media-functions",
  "description": "Firebase Cloud Functions for T4M Billing System",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
