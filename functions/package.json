    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.17",
    "xlsx": "^0.18.5",
    "class-validator": "^0.14.2",
    "class-transformer": "^0.5.1",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
