rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow admins to upload and read commission files
    match /uploads/{period}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (request.auth.token.role == 'ADMIN' || 
         request.auth.token.role == 'admin' ||
         request.auth.token.email == 'admin@trend4media.com');
    }

    // Allow read access for public assets
    match /public/{allPaths=**} {
      allow read;
    }
    
    // Block all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 